# Keybinds

# Terminal (kitty)
super + Return
	kitty -c $HOME/.config/cat-configs/kitty/kitty.conf

# Rofi App Launcher
alt + F1
	$HOME/.config/cat-configs/bin/menu/launcher

# Rofi Menus/Applets
super + {r,m,p,a,n,b}
	$HOME/.config/cat-configs/bin/menu/{runner,music,powermenu,asroot,network,bluetooth}
super + s
	$HOME/.config/cat-configs/bin/menu/screenshot rofi
super + b
    rofi-bluetooth

# Dashboard (Unused)
super + d
	$HOME/.local/bin/dashboard

# Applications

# Launch Apps
super + shift + {b,n}
	{firefox,geany}
super + e
	nautilus

# Terminal Apps
ctrl + alt + {v,n,r,h}
	kitty -c $HOME/.config/cat-configs/kitty/kitty.conf -e {vim,nvim,ranger,htop}

# Lockscreen
ctrl + alt + l
	$HOME/.config/cat-configs/bin/system/lock

# System Keys

# Take a screenshot
Print
    $HOME/.config/cat-configs/bin/utilities/screenshot now
super + alt + {w,a}
    $HOME/.config/cat-configs/bin/utilities/screenshot{ window, area}
super + alt + {ctrl,shift}
    $HOME/.config/cat-configs/bin/utilities/screenshot{ in3, in10}

# Take screenshot of area
ctrl + alt + Print
	$HOME/.config/cat-configs/bin/utilities/screenshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	$HOME/.config/cat-configs/bin/utilities/brightness{ up, down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
    $HOME/.config/cat-configs/bin/utilities/volume{ up, down, mute}
	
# Music control
XF86Audio{Next,Prev,Play}
	playerctl -p spotify,%any,firefox,chromium,brave,mpd{ next, previous, play-pause}

XF86AudioStop
    playerctl -a stop

# Window Manager

# Close App
super + {_,shift + }x
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
F11
    bspc node -t "~"fullscreen

super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + alt + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
# Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {20 0,0 20,0 -20,-20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

# Preselect the direction
super + ctrl + alt +{Left,Right,Up,Down}
	bspc node -p {west,east,north,south}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
