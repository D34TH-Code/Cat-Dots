configuration {
   font:                                "JetBrains Mono Medium 10";
   show-icons:                          false;
   drun-display-format:                 "{icon} {name}";
   disable-history:                     false;
   click-to-exit: 		                true;
   location:                            2;
}

@import "colors.rasi"

window {
   transparency:                        "real";
   background-color:                    @base;
   text-color:                          @text;
   border-radius:                       8px;
   width:                               400px;
   height:                              420px;
   anchor:                              center;
   x-offset:                            330;
   y-offset:                            280;
}

prompt {
   enabled: 				                true;
   margin: 				                   0px 0px 0px 8px;
   padding:    				             9px 0px 6px 0px;
   background-color: 			          @accent;
   text-color: 				             @base;
   border:                  		       0px 0px 0px 0px;
   border-color:                  	    @accent;
   border-radius:                       0px;
}

textbox-prompt-colon {
   expand: 				                  false;
   str: 				                     "î·‘";
   padding:                            12px 15px;
   border-radius:                      100%;
   background-color:                   @mantle;
   text-color:                         inherit;
   font:                               "Phosphor 10";
}

entry {
   expand:                         true;
   width:                          250px;
   padding:                        12px 16px;
   border-radius:                  80%;
   background-color:               @mantle;
   text-color:                     inherit;
   cursor:                         text;
   placeholder:                    "Network";
   placeholder-color:              inherit;
}

inputbar {
   children: 				            [ textbox-prompt-colon, entry ];
   background-color:               transparent;
   spacing:    				            0px;
   text-color:                          @text;
   border:                  		    0px;
   border-radius:                       100%;
   border-color:                  	    @accent;
   expand:                              false;
   margin:                              0px 0px 0px 0px;
   padding:                             2px;
   position:                            center;
}

case-indicator {
   background-color:                    @base;
   text-color:                          @text;
}


listview {
   background-color:                    @base;
   columns:                             1;
   lines:			                    8;
   spacing:                             4px;
   cycle:                               true;
   dynamic:                             true;
   layout:                              vertical;
}

mainbox {
   background-color:                    @base;
   children:                            [ inputbar, listview ];
   spacing:                             15px;
   padding:                             20px;
}

element {
   background-color:                    @base;
   text-color:                          @text;
   orientation:                         horizontal;
   padding:                             6px;
   cursor:                              pointer;
}

element-icon {
   background-color: 			        inherit;
   text-color:       		            inherit;
   horizontal-align:                    0.5;
   vertical-align:                      0.5;
}

element-text {
   background-color: 			        inherit;
   text-color:       			        inherit;
   expand:                              true;
   vertical-align:                      0.5;
   margin:                              2px 0px 2px 2px;
   cursor:                              pointer;
}

element selected {
   background-color:                    @accent;
   text-color:                          @base;
   border-color:                  	    @accent;
   border-radius:                       100%;
}

element.active,
element.selected.urgent {
   background-color:                    @green;
   text-color:                          @base;
   border-color:                        @green;
   border-radius:                       100%;
}

element.selected.urgent {
   border-color:                        @accent;
   border-radius:                       100%;
}

element.urgent,
element.selected.active {
   background-color:                    @red;
   text-color:                          @base;
   border-color:                        @red;
   border-radius:                       100%;
}

element.selected.active {
   border-color:                        @accent;
   border-radius:                       100%;
}